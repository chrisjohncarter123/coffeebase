<h2>"Welcome, <%=@user.name%>!"</h2>

<h4><a href="/sessions/logout">Log Out</a></h4>


<h2>New Coffee Post:</h2>

<form method="POST" action="/posts">

  <p><label for="description">Description</label></p>
  <p><input type="text" id="description" name="description" ></p>

  <p><label for="review">My Review</label></p>
  <p><input type="text" id="review" name="review" ></p>

  <p><input type="submit" value="submit"></p>
</form>



<h2>All Your Posts</h2>

<% @posts.each do |post| %>

  <h4>Description:</h4>
  <%= post.description %>
  <br />

  <a href= <%="/posts/#{post.id}"%>>Details</a>
  <a href= <%="/posts/#{post.id}/edit"%>>Edit</a>



<%end %>





