
<!doctype html>
<html>
<head>
  <title>Coffee Master-Cheif-Chef</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

</head>
<body>
<nav >

  <% if logged_in? %>

    <h2>Currently signed in as: <%=current_user.username %></h2>

  <a href="/statuses" class="btn btn-default" >View All Statuses</a>
  <a href="/statuses/new" class="btn btn-default">Create New Status</a>
  <a href="/logout" class="btn btn-default">Log Out</a>
  <% else %>

      <a href="/" class="btn btn-default">Home</a>
      <a href="/signup" class="btn btn-default">Sign Up</a>
      <a href="/login" class="btn btn-default">Sign In</a>

  <%end %>

</nav>
<div class="container">
  <h1>Coffee Master King</h1>
  <% if !@error_message.nil? %>
    <div class="alert alert-warning">
      <%= @error_message %>
    </div>
  <% end %>
  <%= yield %>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

</body>
</html>
