<h1>Edit <%= @status.title %></h1>

<form action="/statuses/<%=@status.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="Patch">
  <label> Status Title </label>
  <input type="text" name="title" value="<%=@status.title %>"> </br>

  <label> Status Content </label>
  <input type="text" name="content" value="<%=@status.content %>"> </br>

  <input type="submit" value="Update">
</form>
